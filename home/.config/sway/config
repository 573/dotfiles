# Start i3bar to display a workspace bar (plus the system information i3status
## finds out, if available)
## top bar
bar {
  id 0
  position top
  font $font
  status_command i3pystatus-python-interpreter ~/.i3/i3status_top.py

  strip_workspace_numbers yes
  separator_symbol " | "
  tray_padding 0

  colors {
    background #303030
    statusline #ababab
    focused_workspace  #797979 #212121 #DBDBDB
    active_workspace   #c7c7c7 #303030 #DBDBDB
    inactive_workspace #888888 #303030 #DBDBDB
    urgent_workspace   #ffffff #900000 #DBDBDB
  }
}

# bottom bar
