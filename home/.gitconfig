[core]
  excludesfile = ~/.gitignore
  attributesfile = ~/.gitattributes
[include]
  path = ~/.gitconfig.local
[format]
  signoff = true
[color]
  branch = true
  diff = true
  status = true
[am]
  threeWay = true
[user]
  name = JÃ¶rg Thalheim
  email = joerg@thalheim.io
  signingkey = 0xB3F5D81B0C6967C4
[commit]
  gpgSign = true
[tag]
  gpgSign = true
[gpg]
  program = gpg2
[diff]
  tool = vim -d
  compactionHeuristic = true
  renames = true
[merge]
  tool = vim -d
  conflictstyle = diff3
[alias]
  get = clone --recursive
  blame = -w -M
  update = !git pull && git submodule update --init --recursive
  comma = commit --amend
  uncommit = reset --soft HEAD^
  pr = !"pr() { git fetch origin pull/$1/head:pr-$1; git checkout pr-$1; }; pr"
  backport = cherry-pick -x
  cp = cherry-pick
  reset-pr = reset --hard FETCH_HEAD
  publish = !git pull && git push
  # recover failed commit messages: https://stackoverflow.com/questions/9133526/git-recover-failed-commits-message
  recommit = !git commit -eF $(git rev-parse --git-dir)/COMMIT_EDITMSG
[push]
  default = simple
[rerere]
  enabled = true
[branch]
  autosetuprebase = always
[pull]
  rebase = true
  autostash = true
[rebase]
  autoStash = true

[url "gitlab@git.higgsboson.tk:Mic92/"]
  insteadOf = higgs:
[url "git@github.com:Mic92/"]
  insteadOf = gh:
[url "aur@aur4.archlinux.org:"]
  insteadOf = arch:
[help]
  autocorrect = 1
[mergetool]
  prompt = false
  path = nvim
[imap]
  folder = "Drafts"
  host = imap://imap.thalheim.io
  user = joerg@higgsboson.tk
[sendemail]
  from = joerg@thalheim.io <joerg@thalheim.io>
  smtpserver = smtp.thalheim.io
  smtpuser = joerg@higgsboson.tk
  smtpencryption = tls
  chainreplyto = false
  smtpserverport = 587
[http "github.com"]
  SSLCypherList = "EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH"
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[magithub]
  online = false
[magithub "status"]
  includeStatusHeader = false
  includePullRequestsSection = false
  includeIssuesSection = false
[github]
  user = Mic92
[advice]
  detachedHead = false
[init]
  defaultBranch = main
