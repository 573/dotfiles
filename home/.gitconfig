[core]
  editor = vim
  excludesfile = ~/.gitignore
  attributesfile = ~/.gitattributes
  pager = diff-so-fancy | less --tabs=4 -RFX
[format]
  pretty = oneline
  signoff = true
[color]
  branch = true
  diff = true
  ui = true
  status = true
[user]
  name = JÃ¶rg Thalheim
  email = joerg@thalheim.io
  signingkey = CA4106B8D7CC79FA
[diff]
  tool = vimdiff
  compactionHeuristic = true
  renames = true
[merge]
  tool = vimdiff
  conflictstyle = diff3
[alias]
  comma = commit --amend
  lol = log --graph --decorate --pretty=oneline --abbrev-commit --all --max-count=20
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  s = stash --keep-index
  uncommit = reset --soft HEAD^
  pr = !"pr() { git fetch origin pull/$1/head:pr-$1; git checkout pr-$1; }; pr"
  # the acronym stands for "subtree add"
  sba = "!f() { git subtree add --prefix $2 $1 master --squash; }; f"
  # the acronym stands for "subtree update"
  sbu = "!f() { git subtree pull --prefix $2 $1 master --squash; }; f"
  publish = !git pull && git push
[push]
  default = simple
[rerere]
  enabled = true
[branch]
  autosetuprebase = always
[pull]
	rebase = true
  autostash = true
[url "gitlab@git.higgsboson.tk:Mic92/"]
  insteadOf = higgs:
[url "git@github.com:Mic92/"]
  insteadOf = gh:
[url "aur@aur4.archlinux.org:"]
  insteadOf = arch:
[help]
  autocorrect = 1
[mergetool]
  prompt = false
  path = nvim
[imap]
  folder = "Drafts"
  host = imap://imap.higgsboson.tk
  user = joerg@higgsboson.tk
[sendemail]
  from = joerg@higgsboson.tk <joerg@higgsboson.tk>
  smtpserver = mail.higgsboson.tk
  smtpuser = joerg@higgsboson.tk
  smtpencryption = tls
  chainreplyto = false
  smtpserverport = 587
[http "github.com"]
  SSLCypherList = "EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH"
[commit]
  gpgsign = true
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  required = true
