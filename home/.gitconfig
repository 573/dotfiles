[core]
  editor = vim
  excludesfile = /home/joerg/.gitignore
[format]
  pretty = oneline
  signoff = true
[color]
  branch = true
  diff = true
  ui = true
  status = true
[user]
  name = JÃ¶rg Thalheim
  email = joerg@higgsboson.tk
  signingkey = CA4106B8D7CC79FA
[diff]
  tool = vimdiff
  compactionHeuristic = true
  renames = true
[merge]
  tool = vimdiff
  conflictstyle = diff3
[alias]
  comma = commit --amend
  lol = log --graph --decorate --pretty=oneline --abbrev-commit --all --max-count=20
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  s = stash --keep-index
  uncommit = reset --soft HEAD^
[push]
  default = simple
[rerere]
  enabled = 1
[branch]
  autosetuprebase = always
[pull]
  rebase = preserve
  autostash = true
[url "gitlab@git.higgsboson.tk:Mic92/"]
  insteadOf = higgs:
[url "git@github.com:Mic92/"]
  insteadOf = gh:
[url "aur@aur4.archlinux.org:"]
  insteadOf = arch:
[hooks]
  symlinksourcerepo = /home/joerg/git/githooks
  requirestrictparenspacing = false
[help]
  autocorrect = 1
[credential]
  helper = gnome-keyring
[mergetool]
  prompt = false
[imap]
  folder = "Drafts"
  host = imap://localhost
  user = joerg@higgsboson.tk
[sendemail]
  from = joerg@higgsboson.tk <joerg@higgsboson.tk>
  smtpserver = mail.higgsboson.tk
  smtpuser = joerg@higgsboson.tk
  smtpencryption = tls
  chainreplyto = false
  smtpserverport = 587

[http "github.com"]
  SSLCypherList = "EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH"
[commit]
  gpgsign = true
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  required = true
